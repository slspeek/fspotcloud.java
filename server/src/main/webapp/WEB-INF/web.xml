<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>fspotcloud.server.main.GuiceServletConfig</listener-class>
	</listener>
	<!-- Servlets -->
	<servlet>
		<servlet-name>photoDataTaskServlet</servlet-name>
		<servlet-class>fspotcloud.server.control.task.PhotoDataTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>XmlRpcServlet</servlet-name>
		<servlet-class>org.apache.xmlrpc.webserver.XmlRpcServlet</servlet-class>
		<init-param>
			<param-name>enabledForExtensions</param-name>
			<param-value>true</param-value>
			<description>
				Sets, whether the servlet supports vendor extensions for
				XML-RPC.
          </description>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>tagViewTaskServlet</servlet-name>
		<servlet-class>fspotcloud.server.main.task.TagViewTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>tagImportServlet</servlet-name>
		<servlet-class>fspotcloud.server.control.TagImportServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>tagServlet</servlet-name>
		<servlet-class>fspotcloud.server.main.TagServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>photoCountTaskServlet</servlet-name>
		<servlet-class>fspotcloud.server.admin.task.PhotoCountTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>photoDeleteTaskServlet</servlet-name>
		<servlet-class>fspotcloud.server.admin.task.PhotoDeleteTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>imageDataTaskServlet</servlet-name>
		<servlet-class>fspotcloud.server.control.task.ImageDataTaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>imageServlet</servlet-name>
		<servlet-class>fspotcloud.server.main.ImageServlet</servlet-class>
	</servlet>


	<servlet>
		<servlet-name>adminServlet</servlet-name>
		<servlet-class>fspotcloud.server.admin.AdminServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>tagServlet</servlet-name>
		<url-pattern>/fspotcloud/tag</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>adminServlet</servlet-name>
		<url-pattern>/fspotcloud.admin/admin</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>photoCountTaskServlet</servlet-name>
		<url-pattern>/admin/task/photoCount</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>photoDeleteTaskServlet</servlet-name>
		<url-pattern>/admin/task/photoDelete</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>photoDataTaskServlet</servlet-name>
		<url-pattern>/control/task/photoData</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>imageDataTaskServlet</servlet-name>
		<url-pattern>/control/task/imageData</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>tagViewTaskServlet</servlet-name>
		<url-pattern>/main/task/tagView</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>imageServlet</servlet-name>
		<url-pattern>/image</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>tagImportServlet</servlet-name>
		<url-pattern>/cron/import_tags</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>XmlRpcServlet</servlet-name>
		<url-pattern>/xmlrpc</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>FSpotCloud.html</welcome-file>
	</welcome-file-list>


</web-app>
