            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>${project.build.directory}/filtered</directory>
                            <includes></includes>
                        </resource>
                    </webResources>
                    <webResources>
                        <resource>
                            <directory>${project.build.directory}/dependency/classes</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                        </resource>
                        <resource>
                            <directory>${project.build.directory}/dependency/client-${project.version}/</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                            <excludes>
                                <exclude>classes/**</exclude>
                            </excludes>
                        </resource>
                    </webResources>
                    <webXml>${basedir}/src/main/resources/WEB-INF/web.xml</webXml>
                </configuration>
            </plugin>
