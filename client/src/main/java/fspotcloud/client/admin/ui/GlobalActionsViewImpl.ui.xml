<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header-label {
			width: 100%;
			font-size: 125%;
			text-align: center;
			background: #66BDFF;
		}
		
		.property-label {
			background: #66BDFF;
		}
		
		.property-value {
			background: #70C7FF;
		}
		.label-details {
			border: 1px solid blue;
			}
	</ui:style>
	<g:HTMLPanel>
		<table style="{style.label-details}">
			<theader>
				<tr>
					<td colspan="2">
						<g:Label  styleName="{style.header-label}" ui:field="headerLabel">Global actions</g:Label>
					</td>
				</tr>
			</theader>
			<tbody>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Number of photo-metadata object on the server</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.property-value}"  ui:field="photoCountValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}" >Count the photos on the server</g:Label>
					</td>
					<td>
						<g:Button ui:field="countPhotosButton" >Count photos</g:Button>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Number of photos on the peer</g:Label>
					</td>
					<td>
						<g:Label ui:field="peerPhotoCountValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Date we last saw the peer</g:Label>
					</td>
					<td>
						<g:Label  styleName="{style.property-value}" ui:field="lastSeenPeerValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Import/Update tag information from the peer</g:Label>
					</td>
					<td>
						<g:Button ui:field="importTagsButton" >Import/Update all tags</g:Button>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Synchronize with peer</g:Label>
					</td>
					<td>
						<g:Button ui:field="updateButton" >Synchronize</g:Button>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Start the loading of the images</g:Label>
					</td>
					<td>
						<g:Button ui:field="loadImagesButton" >Load images</g:Button>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Delete all labels on the server</g:Label>
					</td>
					<td>
						<g:Button ui:field="deleteAllTagsButton" >Delete all labels</g:Button>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Delete all photos on the server</g:Label>
					</td>
					<td>
						<g:Button ui:field="deleteAllPhotosButton" >Delete all photos</g:Button>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label  styleName="{style.property-label}">Reset the synchronization point</g:Label>
					</td>
					<td>
						<g:Button ui:field="resetMetaDataButton" >Reset synchronization</g:Button>
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 