<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header-label {
			font-size: 125%;
			text-align: center;
			background: #66BDFF;
		}
		
		.property-label {
			background: #66BDFF;
		}
		
		.property-value {
			background: #70C7FF;
		}
	</ui:style>
	<g:HTMLPanel>
		<table>
			<theader>
				<tr>
					<td colspan="2">
						<g:Label styleName="{style.header-label}" ui:field="headerLabel">Label
							details</g:Label>
					</td>
				</tr>
			</theader>
			<tbody>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Name</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.property-value}" ui:field="tagNameValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Description</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.property-value}" ui:field="tagDescriptionValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Import was requested</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.property-value}" ui:field="tagImportIssuedValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Number of photos in this label</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.property-value}" ui:field="tagCountValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Number of photos loaded</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.property-value}" ui:field="tagLoadedCountValueLabel"></g:Label>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label styleName="{style.property-label}">Request import of this label</g:Label>
					</td>
					<td>
						<g:Button ui:field="importTagButton">Import label</g:Button>
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 