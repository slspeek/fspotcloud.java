	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:fit="urn:import:com.reveregroup.gwt.imagepreloader">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel">
		<fit:FitImage ui:field="image"></fit:FitImage>
		<g:HorizontalPanel>
			<g:SimplePanel ui:field="pagerViewPanel"></g:SimplePanel>
			<g:SimplePanel ui:field="slideshowViewPanel"></g:SimplePanel>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 