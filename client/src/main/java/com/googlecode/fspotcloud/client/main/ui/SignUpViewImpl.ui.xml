<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.googlecode.fspotcloud.client.main.ui.Resources" field="res"></ui:with>
	<g:LayoutPanel styleName="{res.style.tagView}">
		<g:layer top="0%" height="10%" right="0%" width="100%">
			      <g:HTML><center><h1>Sign Up</h1></center></g:HTML>
		</g:layer>
        <g:layer top="15%" height="5%" left="10%" width="30%">
            <g:Label>Email</g:Label>
        </g:layer>
		<g:layer top="15%" height="5%" left="40%" width="40%">
             <g:TextBox ui:field="emailTextBox"></g:TextBox>
		</g:layer>
        <g:layer top="25%" height="5%" left="10%" width="30%">
            <g:Label>Nickname</g:Label>
        </g:layer>
        <g:layer top="25%" height="5%" left="40%" width="40%">
            <g:TextBox ui:field="nickTextBox"></g:TextBox>
        </g:layer>
        <g:layer top="35%" height="5%" left="10%" width="30%">
            <g:Label>Password</g:Label>
        </g:layer>
        <g:layer top="35%" height="5%" left="40%" width="40%">
             <g:PasswordTextBox ui:field="passwordTextBox"></g:PasswordTextBox>
        </g:layer>
        <g:layer top="45%" height="5%" left="10%" width="30%">
            <g:Label>Password again</g:Label>
        </g:layer>
        <g:layer top="45%" height="5%" left="40%" width="40%">
            <g:PasswordTextBox ui:field="passwordAgainTextBox"></g:PasswordTextBox>
        </g:layer>
        <g:layer top="55%" height="5%" left="10%" width="30%">
            <g:Label ui:field="statusLabel">Please fill in the fields</g:Label>
        </g:layer>
        <g:layer top="60%" height="5%" left="30%" width="40%">
            <g:PushButton ui:field="signUp">SignUp</g:PushButton>
        </g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 