<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui"
	xmlns:admin="urn:import:com.googlecode.fspotcloud.client.admin.ui">
	<ui:style>
		.title-label {
			text-align: center;
			font-size:200%;
			background: #5CB3FF;
			}
		.tree {
			background: #7AD1FF;
			}
		.main {
			background: #98EFFF;
			}
	</ui:style>
	<g:DockLayoutPanel unit='PX'>
		<g:north size="30">
			<g:Label styleName="{style.title-label}" ui:field="titleLabel" text="F-Spot Cloud Dashboard">
			</g:Label>
		</g:north>
		<g:center>
			<g:SplitLayoutPanel styleName="{style.main}" ui:field="horizontalSplitPanel">
				<g:west size="250">
					<main:TreeViewImpl styleName="{style.tree}" ui:field="treeView"></main:TreeViewImpl>
				</g:west>
				<g:center>
					<g:HorizontalPanel>
						<g:SimplePanel width="400px" height="100%" ui:field="tagDetailsViewContainer"></g:SimplePanel>
						<admin:GlobalActionsViewImpl ui:field="globalActionsView"></admin:GlobalActionsViewImpl>
					</g:HorizontalPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
		<g:south size='20'>
			<g:HTML><center>&copy; 2010-2012 Steven L. Speek</center></g:HTML>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 