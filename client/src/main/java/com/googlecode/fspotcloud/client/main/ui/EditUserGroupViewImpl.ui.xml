<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.googlecode.fspotcloud.client.main.ui.Resources" field="res"></ui:with>
	<g:LayoutPanel styleName="{res.style.tagView}">
		<g:layer top="0%" height="10%" right="0%" width="100%">
			      <g:HTML><center><h1>Edit user group</h1></center></g:HTML>
		</g:layer>
        <g:layer top="15%" height="5%" left="10%" width="30%">
            <g:Label>Name</g:Label>
        </g:layer>
		<g:layer top="15%" height="5%" left="40%" width="40%">
             <g:TextBox ui:field="nameTextBox"></g:TextBox>
		</g:layer>
        <g:layer top="25%" height="5%" left="10%" width="30%">
            <g:Label>Description</g:Label>
        </g:layer>
        <g:layer top="25%" height="5%" left="40%" width="40%">
            <g:TextBox ui:field="descriptionTextBox"></g:TextBox>
        </g:layer>
        <g:layer top="35%" height="5%" left="50%" width="60%">
            <g:CheckBox ui:field="publicCheckBox">Viewable for everybody</g:CheckBox>
        </g:layer>
        <g:layer top="55%" height="5%" left="10%" width="30%">
            <g:Label ui:field="statusLabel"></g:Label>
        </g:layer>
        <g:layer top="60%" height="5%" left="30%" width="40%">
            <g:PushButton ui:field="save">Save</g:PushButton>
        </g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 